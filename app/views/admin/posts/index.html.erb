<h2 class="page-header">Manage Posts <%= link_to "Add New", new_admin_post_path, :class => "btn btn-success float-right", :role => "button" %></h2>
<% if @posts.exists? %>
  <table class="table table-striped">
    <tr>
      <th>Post Title</th>
      <th>Post Category</th>
      <th>Date Created</th>
      <th>Actions</th>
    </tr>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.category.name %></td>
        <td><%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %>
        <td><%= link_to "Edit", edit_admin_post_path(post), :class => "btn btn-warning", :role => "button" %> <%= link_to "Delete", admin_post_path(post), :class => "btn btn-danger", :role => "button", method: :delete, data: {confirm: "Are you sure?"}%></td>
      </tr>
    <% end %>
  </table>

  <%= will_paginate @posts, :class => "page-item" %>

<% else %>
  <p> There are no posts yet</p>
<% end %>