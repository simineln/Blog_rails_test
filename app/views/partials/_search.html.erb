<%= form_tag(posts_path, :method => "get", id:"search-form", class:"search-form form-inline float-right") do %>
    <%= text_field_tag :search, params[:search], placeholder:"Search Posts", class:"form-group form-control" %>
    <%= submit_tag "Search", :name => nil, class:"btn btn-outline-light my-2 my-sm-0" %>
<% end %>